<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="FragmentPriceDataBinding">
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="cz.utb.fai.dodo.financialapp.ui.addTransaction.AddTransactionViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cz.utb.fai.dodo.financialapp.ui.addTransaction.AddTransactionActivity$PlaceholderFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/switchAddTransactionIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="0dp"
                    android:paddingStart="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:paddingStart="0dp"
                    android:text="Price"
                    android:textColor="@color/colorPrimary"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="24dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="0dp"
                    android:paddingTop="24dp"
                    android:text="@{vm.currency}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="32sp" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:columnCount="3"
                android:rowCount="4"
                app:layout_constraintTop_toBottomOf="@+id/layoutPrice">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor1"
                    android:gravity="center_vertical|center"
                    android:text="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor2"
                    android:gravity="center_vertical|center"
                    android:text="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor1"
                    android:gravity="center_vertical|center"
                    android:text="3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor2"
                    android:gravity="center_vertical|center"
                    android:text="4"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor1"
                    android:gravity="center_vertical|center"
                    android:text="5"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor2"
                    android:gravity="center_vertical|center"
                    android:text="6"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor1"
                    android:gravity="center_vertical|center"
                    android:text="7"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor2"
                    android:gravity="center_vertical|center"
                    android:text="8"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor1"
                    android:gravity="center_vertical|center"
                    android:text="9"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor2"
                    android:gravity="center_vertical|center"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor1"
                    android:gravity="center_vertical|center"
                    android:text="."
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:background="@color/backgroundColor2"
                    android:gravity="center_vertical|center"
                    android:text="&lt;"
                    android:textColor="@color/colorPrimary"
                    android:textSize="56sp" />
            </GridLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>